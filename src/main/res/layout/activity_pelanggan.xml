<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Judul Transaksi -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:background="#60AAE7"
        android:padding="10dp"
        android:text="Tambah Pelanggan"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- Layanan Cuci Setrika -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Nama Layanan -->
            <TextView
                android:id="@+id/tvNamaLayanan1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fulan"
                android:textSize="16sp"
                android:textStyle="bold"/>
            <!-- Harga Layanan -->
            <TextView
                android:id="@+id/tvHargaLayanan1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0853xxxx"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:textColor="@android:color/black" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Layanan Setrika -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Nama Layanan -->
            <TextView
                android:id="@+id/tvNamaLayanan2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fulanah"
                android:textSize="16sp"
                android:textStyle="bold"/>
            <!-- Harga Layanan -->
            <TextView
                android:id="@+id/tvHargaLayanan2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0821xxxx"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:textColor="@android:color/black" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Layanan Cuci -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Nama Layanan -->
            <TextView
                android:id="@+id/tvNamaLayanan3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Abdi"
                android:textSize="16sp"
                android:textStyle="bold"/>
            <!-- Harga Layanan -->
            <TextView
                android:id="@+id/tvHargaLayanan3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="0831xxxx"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>